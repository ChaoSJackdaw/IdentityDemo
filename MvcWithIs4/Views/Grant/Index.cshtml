<div class="register-page">
    <div class="lead">
        <h1>Register</h1>
        <p>欢迎使用IdentityServer4客户端注册服务</p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <form asp-route="~/Grant">
                    <div class="form-group">
                        <label>ClientName</label>
                        <input class="form-control" placeholder="ClientName" name="ClientName" autofocus />
                    </div>
                    <div class="form-group">
                        <label>Secret</label>
                        <input class="form-control" placeholder="ClientSecret" name="Secret" autocomplete="off" />
                    </div>
                    <button name="button" value="register">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
